<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/gameinfo_title"
        layout="@layout/item_main_title_rl" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameinfo_title"
        android:layout_marginBottom="50.0dip"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <RelativeLayout
                android:id="@+id/gameinfo_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="15.0dip">

                <ImageView
                    android:id="@+id/gameinfo_iv_gameicon"
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/default_gameicon" />

                <TextView
                    android:id="@+id/gameinfo_tv_gamename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="3.0dip"
                    android:layout_toRightOf="@+id/gameinfo_iv_gameicon"
                    android:ellipsize="end"
                    android:maxEms="12"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black_3"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/gameinfo_tv_xiaoqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gameinfo_tv_gamename"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_toRightOf="@+id/gameinfo_iv_gameicon"
                    android:text="一句话简介："
                    android:textColor="@color/text_light_gray"
                    android:textSize="11.0sp" />

                <TextView
                    android:id="@+id/gameinfo_tv_oneword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gameinfo_tv_xiaoqi"
                    android:layout_marginLeft="10.0dip"
                    android:layout_toRightOf="@+id/gameinfo_iv_gameicon"
                    android:ellipsize="end"
                    android:maxEms="15"
                    android:singleLine="true"
                    android:textColor="@color/text_light_gray"
                    android:textSize="11.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15.0dip"
                android:gravity="center">

                <RelativeLayout
                    android:id="@+id/gameinfo_tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/gameinfo_tv_discount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/game_discount1"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/gameinfo_tv_discount2"
                        style="@style/item_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gameinfo_tv_discount1"
                        android:background="@mipmap/game_discount2"
                        android:gravity="center"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/gameinfo_tv_send_money"
                    style="@style/item_12"
                    android:layout_width="45.0dip"
                    android:layout_height="60.0dip"
                    android:layout_marginTop="15.0dip"
                    android:background="@mipmap/game_sendmoney"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/gameinfo_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gameinfo_first"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15.0dip"
                android:background="@color/background_gray"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/gameinfo_horizon_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10.0dip"
                    android:paddingTop="10.0dip">

                    <!--<ImageView-->
                        <!--android:id="@+id/gameinfo_iv_1"-->
                        <!--android:layout_width="135.0dip"-->
                        <!--android:layout_height="240.0dip"-->
                        <!--android:background="@mipmap/defalut_img" />-->

                    <!--<ImageView-->
                        <!--android:id="@+id/gameinfo_iv_2"-->
                        <!--android:layout_width="135.0dip"-->
                        <!--android:layout_height="240.0dip"-->
                        <!--android:layout_marginLeft="10.0dip"-->
                        <!--android:background="@mipmap/defalut_img" />-->

                    <!--<ImageView-->
                        <!--android:id="@+id/gameinfo_iv_3"-->
                        <!--android:layout_width="135.0dip"-->
                        <!--android:layout_height="240.0dip"-->
                        <!--android:layout_marginLeft="10.0dip"-->
                        <!--android:background="@mipmap/defalut_img" />-->

                    <!--<ImageView-->
                        <!--android:id="@+id/gameinfo_iv_4"-->
                        <!--android:layout_width="135.0dip"-->
                        <!--android:layout_height="240.0dip"-->
                        <!--android:layout_marginLeft="10.0dip"-->
                        <!--android:background="@mipmap/defalut_img" />-->

                    <!--<ImageView-->
                        <!--android:id="@+id/gameinfo_iv_5"-->
                        <!--android:layout_width="135.0dip"-->
                        <!--android:layout_height="240.0dip"-->
                        <!--android:layout_marginLeft="10.0dip"-->
                        <!--android:background="@mipmap/defalut_img" />-->
                    <android.support.v7.widget.RecyclerView

                        android:id="@+id/rv_gameimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/gameinfo_third"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gameinfo_second"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="15.0dip"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gameinfo_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:text="简介："
                    android:textColor="@color/black_3"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@+id/gameinfo_tv_introduction"
                    style="@style/item_12"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gameinfo_tv_title"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2.0dip"
                    android:lineSpacingMultiplier="1.3"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="@color/text_light_gray" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gameinfo_tv_introduction"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/gameinfo_tv_line"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/gameinfo_tv_more"
                        android:background="@color/line_shen" />

                    <TextView
                        android:id="@+id/gameinfo_tv_more"
                        style="@style/item_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:paddingBottom="8.0dip"
                        android:paddingLeft="3.0dip"
                        android:paddingTop="5.0dip"
                        android:text="展开更多 V"
                        android:textColor="@color/black_3"
                        android:visibility="visible" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/gameinfo_fouth"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gameinfo_third"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginTop="3.0dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏信息："
                    android:textColor="@color/black_3"
                    android:textSize="13.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gameinfo_tv_gamesize"
                        style="@style/item_10"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:textColor="@color/text_light_gray" />

                    <TextView
                        android:id="@+id/gameinfo_tv_gameversion"
                        style="@style/item_10"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:textColor="@color/text_light_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gameinfo_tv_androidsystem"
                        style="@style/item_10"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:textColor="@color/text_light_gray" />

                    <TextView
                        android:id="@+id/gameinfo_tv_gametype"
                        style="@style/item_10"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:textColor="@color/text_light_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:layout_marginTop="4.0dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gameinfo_tv_gamelanguage"
                        style="@style/item_10"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:textColor="@color/text_light_gray" />

                    <TextView
                        android:id="@+id/gameinfo_tv_online_time"
                        style="@style/item_10"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:textColor="@color/text_light_gray" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@color/background_gray"
        android:paddingBottom="5.0dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--<com.smwl.x7market.myview.ProgressButton-->
            <!--android:id="@+id/gameinfo_btn_pb"-->
            <!--android:layout_width="300.0dip"-->
            <!--android:layout_height="35.0dip"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:background="@drawable/progress_btn_normal_bg"-->
            <!--android:gravity="center"-->
            <!--android:text=""-->
            <!--android:textColor="#ffffffff" />-->
    </RelativeLayout>
</RelativeLayout>