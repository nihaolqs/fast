<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_title_kaifu"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="@color/background_green">

        <RadioGroup
            android:id="@+id/fragmain_selete1_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/green_deep_bg"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/fragmain_selete1_game_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_white_rb"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="3.0dip"
                android:paddingLeft="27.0dip"
                android:paddingRight="27.0dip"
                android:paddingTop="3.0dip"
                android:text="游戏"
                android:textColor="@drawable/selector_fragment_download_text"
                android:textSize="15.0sp" />

            <RadioButton
                android:id="@+id/fragmain_selete1_kaifu_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_white_rb"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="3.0dip"
                android:paddingLeft="27.0dip"
                android:paddingRight="27.0dip"
                android:paddingTop="3.0dip"
                android:text="开服"
                android:textColor="@drawable/selector_fragment_download_text"
                android:textSize="15.0sp" />
        </RadioGroup>

        <ImageView
            android:id="@+id/kaifu_imageview_title_right"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingBottom="5.0dip"
            android:paddingLeft="8.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="5.0dip"
            android:src="@mipmap/title_share" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragmain_selete1_vp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white" />
</LinearLayout>